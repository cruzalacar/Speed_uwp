<Page
    x:Class="Speed_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Speed_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="727">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="_btnStart" Content="Start Game" HorizontalAlignment="Center" Margin="0,0,400,0" VerticalAlignment="Center" Width="300" Height="100" Grid.Row="1" Click="OnStartGame" FontSize="50"/>
        <Button x:Name="_btnInstruct" Content="Instructions" HorizontalAlignment="Center" Margin="400,0,0,0" VerticalAlignment="Center" Width="300" Height="100" Grid.Row="1" FontSize="50" Click="OnInstructions"/>
        <Button x:Name="_btnExit" Content="Exit" HorizontalAlignment="Center" Margin="0,0,0,100" VerticalAlignment="Center" Width="300" Height="99" Grid.Row="2" FontSize="50" Click="OnExit"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Margin="0" TextWrapping="Wrap" Text="SPEED" VerticalAlignment="Center" Height="197" Width="477" FontSize="150" BorderThickness="0"/>

    </Grid>
</Page>
